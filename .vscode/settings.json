{
  "files.exclude": {
    "**/.DS_Store": true,
    "**/.git": true,
    "**/.github": true,
    "**/.gitp*": true,
    "**/.hg": true,
    "**/.svn": true,
    "**/.vscode": true,
    "**/core.Microsoft*": true,
    "**/core.mongo*": true,
    "**/core.python*": true,
    "**/CVS": true
  },
  "workbench.iconTheme": "sweet-vscode-icons",
  "workbench.colorTheme": "Synthax",
  "terminal.integrated.tabs.defaultColor": "terminal.ansiMagenta",
  "terminal.integrated.automationProfile.linux": null,
  "workbench.colorCustomizations": {
    "terminal.foreground": "#c79bff",
    "terminalCursor.foreground": "#c79bff",
    "minimap.background": "#00000000",
    "scrollbar.shadow": "#00000000"
  },
  "files.autoSave": "afterDelay",
  "editor.fontSize": 16,
  "editor.fontFamily": "ComicShannsMono Nerd Font Mono",
  "editor.wordWrap": "on",
  "editor.formatOnPaste": false,
  "editor.formatOnSave": true,
  "editor.rulers": [
    119
  ],
  "[python]": {
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.codeActionsOnSave": {
      "source.fixAll": "always",
      "source.organizeImports": "explicit"
    }
  },
  "editor.guides.bracketPairs": true,
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "django-html": "html",
    "html": "html"
  },
  "editor.formatOnType": false,
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "editor.language.colorizedBracketPairs": [],
  "editor.fontWeight": "bold",
  "terminal.integrated.fontFamily": "ComicShannsMono Nerd Font Mono",
  "terminal.integrated.fontSize": 16,
  "files.associations": {
    "**/views/**/*.html": "django-html",
    "*.tpl": "django-html"
  },
  "[django-html]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "HookyQR.beautify"
  },
  "html.format.templating": true,
  "ruff.lint.run": "onSave",
  "workbench.commandPalette.experimental.suggestCommands": true,
  "workbench.editor.enablePreviewFromQuickOpen": true,
  "workbench.editor.enablePreviewFromCodeNavigation": true,
  "editor.defaultFormatter": "HookyQR.beautify",
  "django.snippets.exclude": [
    "cms",
    "wagtail"
  ],
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "ruff.lint.args": [
    "--config=~/workspace/gloss/pyproject.toml",
  ],
  "flake8.args": [
    "--max-line-length=119",
    "--ignore=E402,F841,F401,E302,E305"
  ],
  "html.format.wrapLineLength": 119,
  "[javascript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "editor.mouseWheelZoom": true,
  "terminal.integrated.mouseWheelZoom": true,
  "terminal.integrated.copyOnSelection": true,
  "evenBetterToml.formatter.columnWidth": 1,
  "evenBetterToml.formatter.allowedBlankLines": 1,
  "ruff.lineLength": 119,
  "debug.console.acceptSuggestionOnEnter": "on",
  "python.terminal.activateEnvironment": false,
  "ruff.configuration": "/gloss/pyproject.toml",
  "[toml]": {
    "editor.defaultFormatter": "tamasfe.even-better-toml"
  },
  "terminal.integrated.ignoreBracketedPasteMode": true,
}
